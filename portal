#! /usr/bin/env php


<?php

use Symfony\Component\Console\Application;

if (file_exists(__DIR__.'/../../autoload.php')) {
    require __DIR__.'/../../autoload.php';
} else {
    require __DIR__.'/vendor/autoload.php';
}

//File holds file paths.
require 'config.php';



$applicationName =  "
------------------------------------------------
         ____  ____  ____  _________    __
        / __ \/ __ \/ __ \/_  __/   |  / /
       / /_/ / / / / /_/ / / / / /| | / /
      / ____/ /_/ / _, _/ / / / ___ |/ /___
     /_/    \____/_/ |_| /_/ /_/  |_/_____/
------------------------------------------------
";

$app = new Application($applicationName, 'Portal Developer Tools v1.1');

$app->add(new Portal\Tools\BuildCommand);
$app->add(new Portal\Tools\OpenCommand);
$app->add(new Portal\Tools\ConfigCommand);
$app->add(new Portal\Tools\UpdateCommand);
$app->add(new Portal\Tools\CommitCommand);


$app->run();
